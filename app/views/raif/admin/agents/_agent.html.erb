<tr id="<%= dom_id(agent) %>" class="sentinel-agent">
  <td><%= link_to "##{agent.id}", sentinel.admin_agent_path(agent) %></td>
  <td><small class="text-muted"><%= agent.created_at.rfc822 %></small></td>
  <td><small class="text-muted"><%= truncate(agent.task, length: 100) %></small></td>
  <td>
    <% if agent.completed_at? %>
      <span class="badge bg-success"><%= t("sentinel.admin.common.completed") %></span>
    <% elsif agent.failed_at? %>
      <span class="badge bg-danger"><%= t("sentinel.admin.common.failed") %></span>
    <% elsif agent.started_at? %>
      <span class="badge bg-warning"><%= t("sentinel.admin.common.running") %></span>
    <% else %>
      <span class="badge bg-secondary"><%= t("sentinel.admin.common.pending") %></span>
    <% end %>
  </td>
  <td><%= agent.iteration_count %> / <%= agent.max_iterations %></td>
  <td><small class="text-muted"><%= truncate(agent.final_answer, length: 100) if agent.final_answer %></small></td>
</tr>
