<div class="d-flex justify-content-between align-items-center my-4">
  <h1><%= t(".title", id: @agent.id) %></h1>
  <%= link_to t(".back_to_agents"), sentinel.admin_agents_path, class: "btn btn-outline-secondary" %>
</div>

<div class="card mb-4">
  <div class="card-header">
    <h5 class="mb-0"><%= t("sentinel.admin.common.details") %></h5>
  </div>
  <div class="card-body">
    <div class="row mb-3">
      <div class="col-md-3"><strong><%= t("sentinel.admin.common.id") %>:</strong></div>
      <div class="col-md-9"><%= @agent.id %></div>
    </div>
    <div class="row mb-3">
      <div class="col-md-3"><strong><%= t("sentinel.admin.common.created_at") %>:</strong></div>
      <div class="col-md-9"><%= @agent.created_at.rfc822 %></div>
    </div>
    <div class="row mb-3">
      <div class="col-md-3"><strong><%= t("sentinel.admin.common.creator") %>:</strong></div>
      <div class="col-md-9">
        <%= @agent.creator.try(:sentinel_display_name) || "#{@agent.creator_type} ##{@agent.creator_id}" %>
      </div>
    </div>
    <div class="row mb-3">
      <div class="col-md-3"><strong><%= t("sentinel.admin.common.status") %>:</strong></div>
      <div class="col-md-9">
        <% if @agent.completed_at? %>
          <span class="badge bg-success"><%= t("sentinel.admin.common.completed") %></span> <%= t("sentinel.admin.common.at") %> <%= @agent.completed_at.rfc822 %>
        <% elsif @agent.failed_at? %>
          <span class="badge bg-danger"><%= t("sentinel.admin.common.failed") %></span> <%= t("sentinel.admin.common.at") %> <%= @agent.failed_at.rfc822 %>
        <% elsif @agent.started_at? %>
          <span class="badge bg-warning"><%= t("sentinel.admin.common.running") %></span> <%= t("sentinel.admin.common.since") %> <%= @agent.started_at.rfc822 %>
        <% else %>
          <span class="badge bg-secondary"><%= t("sentinel.admin.common.pending") %></span>
        <% end %>
      </div>
    </div>
    <div class="row mb-3">
      <div class="col-md-3"><strong><%= t("sentinel.admin.common.iterations") %>:</strong></div>
      <div class="col-md-9"><%= @agent.iteration_count %> / <%= @agent.max_iterations %></div>
    </div>
    <div class="row mb-3">
      <div class="col-md-3"><strong><%= t("sentinel.admin.common.model") %>:</strong></div>
      <div class="col-md-9"><%= @agent.llm_model_key %></div>
    </div>
    <% if @agent.requested_language_key.present? %>
      <div class="row mb-3">
        <div class="col-md-3"><strong><%= t("sentinel.admin.common.language") %>:</strong></div>
        <div class="col-md-9"><%= @agent.requested_language_key %></div>
      </div>
    <% end %>
  </div>
</div>

<div class="card mb-4">
  <div class="card-header">
    <h5 class="mb-0"><%= t("sentinel.admin.common.task") %></h5>
  </div>
  <div class="card-body">
    <pre class="pre-wrap"><%= @agent.task %></pre>
  </div>
</div>

<% if @agent.final_answer.present? %>
  <div class="card mb-4">
    <div class="card-header">
      <h5 class="mb-0"><%= t("sentinel.admin.common.final_answer") %></h5>
    </div>
    <div class="card-body">
      <pre class="pre-wrap"><%= @agent.final_answer %></pre>
    </div>
  </div>
<% end %>

<div class="card mb-4">
  <div class="card-header">
    <h5 class="mb-0"><%= t("sentinel.admin.common.system_prompt") %></h5>
  </div>
  <div class="card-body">
    <pre class="pre-wrap"><%= @agent.system_prompt %></pre>
  </div>
</div>

<% if @agent.conversation_history.present? %>
  <div class="card mb-4 conversation-card">
    <div class="card-header">
      <h5 class="mb-0"><%= t("sentinel.admin.common.conversation_history") %></h5>
    </div>
    <div class="card-body p-0">
      <div class="conversation-history p-3">
        <% @agent.conversation_history.each_with_index do |message, index| %>
          <%= render partial: "sentinel/admin/agents/conversation_message",
                locals: { message: message, message_count: index + 1 } %>
        <% end %>
      </div>
    </div>
  </div>
<% end %>

<% if @agent.sentinel_model_completions.any? %>
  <div class="card mb-4">
    <div class="card-header">
      <h5 class="mb-0"><%= t("sentinel.admin.common.model_completions") %></h5>
    </div>
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-striped table-hover">
          <thead class="table-light">
            <tr>
              <th><%= t("sentinel.admin.common.id") %></th>
              <th><%= t("sentinel.admin.common.created_at") %></th>
              <th><%= t("sentinel.admin.common.model") %></th>
              <th><%= t("sentinel.admin.common.total_tokens") %></th>
              <th><%= t("sentinel.admin.common.response") %></th>
            </tr>
          </thead>
          <tbody>
            <% @agent.sentinel_model_completions.order(created_at: :asc).each do |model_completion| %>
              <tr>
                <td><%= link_to "##{model_completion.id}", sentinel.admin_model_completion_path(model_completion) %></td>
                <td><small class="text-muted"><%= model_completion.created_at.rfc822 %></small></td>
                <td><%= model_completion.llm_model_key %></td>
                <td><%= model_completion.total_tokens ? number_with_delimiter(model_completion.total_tokens) : "-" %></td>
                <td><small class="text-muted"><%= truncate(model_completion.raw_response, length: 100) %></small></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
<% end %>
