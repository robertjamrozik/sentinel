<h1 class="my-4"><%= t("sentinel.admin.common.stats") %></h1>

<div class="row">
  <div class="col-12">
    <div class="card shadow-sm mb-4">
      <div class="card-body">
        <div class="row g-4">
          <!-- Model Completions -->
          <div class="col-md-4 col-lg-4">
            <div class="stats-card p-3 border rounded shadow-sm h-100">
              <div class="d-flex align-items-center mb-2">
