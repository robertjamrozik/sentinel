<h1 class="my-4"><%= t("sentinel.admin.common.agent_invocations") %></h1>

<div class="row">
  <div class="col-12">
    <% if @agent_invocations.any? %>
      <div class="table-responsive">
        <table class="table table-striped table-hover">
          <thead class="table-light">
            <tr>
              <th><%= t("sentinel.admin.common.id") %></th>
              <th><%= t("sentinel.admin.common.created_at") %></th>
              <th><%= t("sentinel.admin.common.task") %></th>
              <th><%= t("sentinel.admin.common.status") %></th>
              <th><%= t("sentinel.admin.common.iterations") %></th>
              <th><%= t("sentinel.admin.common.final_answer") %></th>
            </tr>
          </thead>
          <tbody>
            <%= render partial: "sentinel/admin/agent_invocations/agent_invocation", collection: @agent_invocations %>
          </tbody>
        </table>
      </div>

      <div class="mt-4">
        <%== pagy_bootstrap_nav(@pagy) %>
      </div>
    <% else %>
      <div class="alert alert-info">
        <%= t("sentinel.admin.common.no_agent_invocations") %>
      </div>
    <% end %>
  </div>
</div>
