<h1 class="my-4"><%= t("sentinel.admin.common.model_responses") %></h1>

<div class="row">
  <div class="col-12">
    <% if @model_responses.any? %>
      <div class="table-responsive">
        <table class="table table-striped table-hover">
          <thead class="table-light">
            <tr>
              <th><%= t("sentinel.admin.common.id") %></th>
              <th><%= t("sentinel.admin.common.created_at") %></th>
              <th><%= t("sentinel.admin.common.source") %></th>
              <th><%= t("sentinel.admin.common.model") %></th>
              <th><%= t("sentinel.admin.common.response_format") %></th>
              <th><%= t("sentinel.admin.common.total_tokens") %></th>
              <th><%= t("sentinel.admin.common.response") %></th>
            </tr>
          </thead>
          <tbody>
            <%= render partial: "sentinel/admin/model_responses/model_response", collection: @model_responses %>
          </tbody>
        </table>
      </div>

      <div class="mt-4">
        <%== pagy_bootstrap_nav(@pagy) %>
      </div>
    <% else %>
      <div class="alert alert-info">
        <%= t("sentinel.admin.common.no_model_responses") %>
      </div>
    <% end %>
  </div>
</div> 