<h1 class="my-4"><%= t("sentinel.admin.common.tasks") %></h1>

<div class="row">
  <div class="col-12">
    <%= form_tag sentinel.admin_tasks_path, method: :get, class: "mb-4" do %>
      <div class="row align-items-end">
        <div class="col-md-4">
          <div class="form-group">
            <label for="task_types"><%= t("sentinel.admin.common.type") %></label>
            <%= select_tag :task_types,
                  options_for_select([["All", "all"]] + @task_types.map{|type| [type, type] }, @selected_type),
                  { class: "form-select" } %>
          </div>
        </div>
        <div class="col-md-4">
          <div class="form-group">
            <label for="task_statuses"><%= t("sentinel.admin.common.status") %></label>
            <%= select_tag :task_statuses,
                  options_for_select([
                    [t("sentinel.admin.common.all"), :all],
                    [t("sentinel.admin.common.completed"), :completed],
                    [t("sentinel.admin.common.failed"), :failed],
                    [t("sentinel.admin.common.in_progress"), :in_progress],
                    [t("sentinel.admin.common.pending"), :pending]
                  ], @selected_statuses),
                  { class: "form-select" } %>
          </div>
        </div>
        <div class="col-md-2">
          <%= submit_tag t("sentinel.admin.common.filter"), class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>

    <% if @tasks.any? %>
      <div class="table-responsive">
        <table class="table table-striped table-hover">
          <thead class="table-light">
            <tr>
              <th><%= t("sentinel.admin.common.id") %></th>
              <th><%= t("sentinel.admin.common.type") %></th>
              <th><%= t("sentinel.admin.common.created_at") %></th>
              <th><%= t("sentinel.admin.common.creator") %></th>
              <th><%= t("sentinel.admin.common.model") %></th>
              <th><%= t("sentinel.admin.common.status") %></th>
              <th><%= t("sentinel.admin.common.prompt") %></th>
            </tr>
          </thead>
          <tbody>
            <%= render partial: "sentinel/admin/tasks/task", collection: @tasks %>
          </tbody>
        </table>
      </div>

      <div class="mt-4">
        <%== pagy_bootstrap_nav(@pagy) %>
      </div>
    <% else %>
      <div class="alert alert-info">
        <%= t("sentinel.admin.common.no_tasks") %>
      </div>
    <% end %>
  </div>
</div>
