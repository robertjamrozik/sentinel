<div class="d-flex justify-content-between align-items-center my-4">
  <h1><%= t(".title", id: @completion.id) %></h1>
  <%= link_to t(".back_to_completions"), sentinel.admin_completions_path, class: "btn btn-outline-secondary" %>
</div>

<div class="card mb-4">
  <div class="card-header">
    <h5 class="mb-0"><%= t("sentinel.admin.common.details") %></h5>
  </div>
  <div class="card-body">
    <div class="row mb-3">
      <div class="col-md-3"><strong><%= t("sentinel.admin.common.id") %>:</strong></div>
      <div class="col-md-9"><%= @completion.id %></div>
    </div>
    <div class="row mb-3">
      <div class="col-md-3"><strong><%= t("sentinel.admin.common.creator") %>:</strong></div>
      <div class="col-md-9"><%= @completion.creator_type %> #<%= @completion.creator_id %></div>
    </div>
    <div class="row mb-3">
      <div class="col-md-3"><strong><%= t("sentinel.admin.common.model") %>:</strong></div>
      <div class="col-md-9"><%= @completion.llm_model_key %></div>
    </div>
    <div class="row mb-3">
      <div class="col-md-3"><strong><%= t("sentinel.admin.common.response_format") %>:</strong></div>
      <div class="col-md-9"><%= @completion.response_format %></div>
    </div>
    <div class="row mb-3">
      <div class="col-md-3"><strong><%= t("sentinel.admin.common.created_at") %>:</strong></div>
      <div class="col-md-9"><%= @completion.created_at.strftime("%Y-%m-%d %H:%M:%S") %></div>
    </div>
    <div class="row mb-3">
      <div class="col-md-3"><strong><%= t("sentinel.admin.common.started_at") %>:</strong></div>
      <div class="col-md-9">
        <% if @completion.started_at? %>
          <%= @completion.started_at.strftime("%Y-%m-%d %H:%M:%S") %>
        <% end %>
      </div>
    </div>
    <div class="row mb-3">
      <div class="col-md-3"><strong><%= t("sentinel.admin.common.completed_at") %>:</strong></div>
      <div class="col-md-9">
        <% if @completion.completed_at? %>
          <%= @completion.completed_at.strftime("%Y-%m-%d %H:%M:%S") %>
        <% end %>
      </div>
    </div>
    <div class="row mb-3">
      <div class="col-md-3"><strong><%= t("sentinel.admin.common.failed_at") %>:</strong></div>
      <div class="col-md-9">
        <% if @completion.failed_at? %>
          <%= @completion.failed_at.strftime("%Y-%m-%d %H:%M:%S") %>
        <% end %>
      </div>
    </div>
    <div class="row mb-3">
      <div class="col-md-3"><strong><%= t("sentinel.admin.common.status") %>:</strong></div>
      <div class="col-md-9">
        <% if @completion.completed_at? %>
          <span class="badge bg-success"><%= t("sentinel.admin.common.completed") %></span>
        <% elsif @completion.failed_at? %>
          <span class="badge bg-danger"><%= t("sentinel.admin.common.failed") %></span>
        <% elsif @completion.started_at? %>
          <span class="badge bg-warning text-dark"><%= t("sentinel.admin.common.in_progress") %></span>
        <% else %>
          <span class="badge bg-secondary"><%= t("sentinel.admin.common.pending") %></span>
        <% end %>
      </div>
    </div>
    <div class="row mb-3">
      <div class="col-md-3"><strong><%= t("sentinel.admin.common.prompt_tokens") %>:</strong></div>
      <div class="col-md-9">
        <%= number_with_delimiter(@completion.prompt_tokens) %>
      </div>
    </div>
    <div class="row mb-3">
      <div class="col-md-3"><strong><%= t("sentinel.admin.common.completion_tokens") %>:</strong></div>
      <div class="col-md-9">
        <%= number_with_delimiter(@completion.completion_tokens) %>
      </div>
    </div>
    <% if @completion.requested_language_key.present? %>
      <div class="row mb-3">
        <div class="col-md-3"><strong><%= t("sentinel.admin.common.requested_language") %>:</strong></div>
        <div class="col-md-9"><%= @completion.requested_language_key %></div>
      </div>
    <% end %>
  </div>
</div>

<div class="card mb-4">
  <div class="card-header">
    <h5 class="mb-0"><%= t("sentinel.admin.common.system_prompt") %></h5>
  </div>
  <div class="card-body">
    <pre class="pre-wrap"><%= @completion.system_prompt %></pre>
  </div>
</div>

<div class="card mb-4">
  <div class="card-header">
    <h5 class="mb-0"><%= t("sentinel.admin.common.prompt") %></h5>
  </div>
  <div class="card-body">
    <pre class="pre-wrap"><%= @completion.prompt %></pre>
  </div>
</div>

<div class="card mb-4">
  <div class="card-header">
    <h5 class="mb-0"><%= t("sentinel.admin.common.response") %> (<%= @completion.response_format %>)</h5>
  </div>
  <div class="card-body">

    <% if @completion.response_format_json? %>
      <h5 class="mb-0"><%= t("sentinel.admin.common.raw") %></h5>
      <pre class="pre-wrap"><%= @completion.response %></pre>

      <h5 class="mb-0 mt-4"><%= t("sentinel.admin.common.prettified") %></h5>
      <% begin %>
        <pre class="pre-wrap"><%= JSON.pretty_generate(@completion.parsed_response) %></pre>
        <% rescue StandardError %>
        <%= t("sentinel.admin.common.invalid_json") %>
      <% end %>
    <% else %>
      <pre class="pre-wrap"><%= @completion.response %></pre>
    <% end %>
  </div>
</div>

<% if @completion.model_tool_invocations.any? %>
  <div class="card mb-4">
    <div class="card-header">
      <h5 class="mb-0"><%= t("sentinel.admin.common.tool_invocations") %></h5>
    </div>
    <div class="card-body">
      <div class="list-group">
        <% @completion.model_tool_invocations.each do |invocation| %>
          <div class="list-group-item">
            <div class="d-flex w-100 justify-content-between">
              <h5 class="mb-1"><%= invocation.tool_name %></h5>
              <small class="text-muted"><%= invocation.created_at.strftime("%Y-%m-%d %H:%M:%S") %></small>
            </div>

            <p class="mb-1"><strong><%= t("sentinel.admin.common.arguments") %>:</strong></p>

            <pre class="pre-wrap"><%= begin
                                        JSON.pretty_generate(invocation.tool_arguments)
                                      rescue StandardError
                                        invocation.tool_arguments
                                      end %></pre>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
