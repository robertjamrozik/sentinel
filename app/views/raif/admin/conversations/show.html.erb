<div class="d-flex justify-content-between align-items-center my-4">
  <h1><%= t(".title", id: @conversation.id) %></h1>
  <%= link_to t(".back_to_conversations"), sentinel.admin_conversations_path, class: "btn btn-outline-secondary" %>
</div>

<div class="card mb-4">
  <div class="card-header">
    <h5 class="mb-0"><%= t("sentinel.admin.common.details") %></h5>
  </div>
  <div class="card-body">
    <div class="row mb-3">
      <div class="col-md-3"><strong><%= t("sentinel.admin.common.id") %>:</strong></div>
      <div class="col-md-9"><%= @conversation.id %></div>
    </div>
    <div class="row mb-3">
      <div class="col-md-3"><strong><%= t("sentinel.admin.common.creator") %>:</strong></div>
      <div class="col-md-9"><%= @conversation.creator_type %> #<%= @conversation.creator_id %></div>
    </div>
    <div class="row mb-3">
      <div class="col-md-3"><strong><%= t("sentinel.admin.common.type") %>:</strong></div>
      <div class="col-md-9"><%= @conversation.type %></div>
    </div>
    <div class="row mb-3">
      <div class="col-md-3"><strong><%= t("sentinel.admin.common.created_at") %>:</strong></div>
      <div class="col-md-9"><%= @conversation.created_at.strftime("%Y-%m-%d %H:%M:%S") %></div>
    </div>
    <div class="row mb-3">
      <div class="col-md-3"><strong><%= t("sentinel.admin.common.entries_count") %>:</strong></div>
      <div class="col-md-9"><%= @conversation.conversation_entries_count %></div>
    </div>
  </div>
</div>

<% if @conversation.entries.any? %>
  <div class="card mb-4">
    <div class="card-header">
      <h5 class="mb-0"><%= t("sentinel.admin.common.conversation_entries") %></h5>
    </div>
    <div class="card-body">
      <div class="list-group">
        <% @conversation.entries.order(created_at: :asc).each do |entry| %>
          <div class="list-group-item">
            <div class="d-flex w-100 justify-content-between">
              <h5 class="mb-1"><%= t("sentinel.admin.common.entry") %> #<%= entry.id %></h5>
              <small class="text-muted"><%= entry.created_at.strftime("%Y-%m-%d %H:%M:%S") %></small>
            </div>
            <div class="mb-3">
              <strong><%= t("sentinel.admin.common.user_message") %>:</strong>
              <pre class="mt-2"><%= entry.user_message %></pre>
            </div>
            <% if entry.model_response_message.present? %>
              <div class="mb-3">
                <strong><%= t("sentinel.admin.common.model_response") %>:</strong>
                <pre class="mt-2"><%= entry.model_response_message %></pre>
              </div>
            <% end %>
            <div class="d-flex w-100 justify-content-between">
              <div>
                <% if entry.completed_at? %>
                  <span class="badge bg-success"><%= t("sentinel.admin.common.completed") %></span>
                <% elsif entry.failed_at? %>
                  <span class="badge bg-danger"><%= t("sentinel.admin.common.failed") %></span>
                <% elsif entry.started_at? %>
                  <span class="badge bg-warning text-dark"><%= t("sentinel.admin.common.in_progress") %></span>
                <% else %>
                  <span class="badge bg-secondary"><%= t("sentinel.admin.common.pending") %></span>
                <% end %>
              </div>
              <% if entry.sentinel_completion.present? %>
                <%= link_to t("sentinel.admin.common.view_completion"), sentinel.admin_completion_path(entry.sentinel_completion), class: "btn btn-sm btn-outline-primary" %>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
