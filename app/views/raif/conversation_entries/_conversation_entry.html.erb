<div id="<%= dom_id(conversation_entry) %>" class="my-2">
  <%= render "sentinel/conversation_entries/message",
        conversation_entry: conversation_entry,
        content: conversation_entry.user_message,
        message_type: :user %>

  <% if conversation_entry.completed? || conversation_entry.generating_response? %>
    <%= render "sentinel/conversation_entries/message",
          conversation_entry: conversation_entry,
          content: conversation_entry.generating_response? ? content_tag(:span, "", class: "sentinel-loader") : conversation_entry.model_response_message,
          message_type: :model_response %>

    <% conversation_entry.sentinel_model_tool_invocations.select(&:renderable?).each do |ti| %>
      <div class="mb-4 container">
        <%= render ti, conversation_entry: conversation_entry %>
      </div>
    <% end %>
  <% elsif conversation_entry.failed? %>
    <div class="mb-4 container">
      <%= render "sentinel/conversation_entries/message",
            conversation_entry: conversation_entry,
            content: t("sentinel.common.there_was_an_error_generating_this_response"),
            message_type: :model_response %>
    </div>
  <% end %>
</div>
